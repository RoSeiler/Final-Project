                            <% } %>
                                <% } %>
                                    <% } %>
                                        <h2 class="title-cards">Tamaños disponibles</h2>
                                        <h3>
                                            <% for( let i=0; i < sizes.length; i++ ) { %>
                                                <% for (let j=0; j <JSON.stringify(products.relProductSize.length);j++)
                                                    { %>
                                                    <% if(JSON.stringify(products.relProductSize[j].idSize)==sizes[i].idSize){
                                                        %>
                                                        <%= sizes[i].typeOfSize %>
                                                            <% } %>
                                                                <% } %>
                                                                    <% } %>
