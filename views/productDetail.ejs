      </H3>
      <% if (locals.isAnUserLogged==true){%>
        <div class="card-link-1">
            <a  href="/products/edit/<%= id %>">Editar</a>
            <a  href="/products/borrar/<%= id %>">Eliminar</a>           
            
            </div>
